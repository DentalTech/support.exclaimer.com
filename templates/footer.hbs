<footer class="footer">
  <div class="footer-inner">
    {{#link 'help_center'}}{{help_center.name}}{{/link}}

    <div class="footer-language-selector">
      {{#if alternative_locales}}
        <div class="dropdown language-selector" aria-haspopup="true">
          <a class="dropdown-toggle">
            {{current_locale.name}}
          </a>
          <span class="dropdown-menu dropdown-menu-end" role="menu">
            {{#each alternative_locales}}
              <a href="{{url}}" dir="{{direction}}" rel="nofollow" role="menuitem">
                {{name}}
              </a>
            {{/each}}
          </span>
        </div>
      {{/if}}
    </div>
  </div>
</footer>

<script type="text/javascript">
    window.zESettings = {
      webWidget: {
          launcher: {
              label: {
                  '*': 'Get Help'
              },
          },
        helpCenter: {
            title: {
                '*': 'Search for help'
            },
            searchPlaceholder: {
                '*': 'Search our help center'
            },
            chatButton: {
                '*': 'Chat online'
            },
            messageButton: {
                '*': 'Leave a message'
            }
        },
        chat: {
          title: {
              '*': 'Ask Us Anything'
          },
          hidewhenoffline: true,
          departments: {
            enabled: ['Technical Support'],
            select: 'Technical Support'
          },
          offlineform: {
              greeting: {
                  '*': "We aren't online right now, please leave a message"
              }
          }
        }
      }
    };
  </script>

  <script>
    $( document ).ready(function() {
      zE('webWidget:on', 'chat:departmentStatus', function(dept){
        if(dept.name === 'Technical Support'){
          if (dept.status === 'offline') {
              zE('webWidget', 'chat:end');
              //zE('webWidget', 'close');
              zE('webWidget','hide');
              $('#my-button').show();
          } else {
              zE('webWidget','show');
              $('#my-button').hide();
          }
        }
      });
    });
  </script>
